<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Students</h1>
  <%= link_to "Add New Student", new_student_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @students.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Grade</th>
              <th>Age</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= student.full_name %></td>
                <td><%= student.email %></td>
                <td><%= student.phone %></td>
                <td><%= student.grade %></td>
                <td><%= student.age %> years</td>
                <td>
                  <%= link_to "View", student_path(student), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Edit", edit_student_path(student), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Delete", student_path(student), method: :delete, 
                              class: "btn btn-sm btn-outline-danger",
                              confirm: "Are you sure you want to delete #{student.full_name}?" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <h3 class="text-muted">No students found</h3>
        <p class="text-muted">Get started by adding your first student.</p>
        <%= link_to "Add Student", new_student_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
